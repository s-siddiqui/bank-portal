{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "lib": ["DOM", "ESNext"],
    "moduleResolution": "node16",
    "esModuleInterop": true,
    "jsx": "react-jsx",
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "./",
    "types": ["react", "react-native"],
    "paths": {
      "ui-kit": ["packages/ui-kit/dist/index.js"],
      "ui-kit/*": ["packages/ui-kit/dist*"],
      "@bank-portal/ui-kit": ["packages/ui-kit/src"]
    }
  }
}
